{
  "name": "@stonehiy/cli-service",
  "version": "1.0.0-beta.6",
  "description": ":hammer_and_wrench: megalo的开箱即用webpack小程序脚手架配置，内置megalo生态的部分插件，并提供用户自定义配置的入口(对标vue-cli 3)",
  "main": "./bin/megalo-service.js",
  "bin": {
    "megalo-cli-service": "./bin/megalo-service.js"
  },
  "scripts": {
    "dev:mp": "node bin/megalo-service.js serve --platform wechat",
    "dev:web": "node bin/megalo-service.js serve --platform web --https --copy",
    "build": "node bin/megalo-service.js build --platform web",
    "help": "node bin/megalo-service.js help",
    "debug": "node bin/megalo-service.js inspect"
  },
  "engines": {
    "node": ">=9"
  },
  "dependencies": {
    "@megalo/cli-share-utils": "latest",
    "@soda/friendly-errors-webpack-plugin": "^1.7.1",
    "@megalo/cli-plugin-mp": "latest",
    "address": "^1.0.3",
    "cache-loader": "^2.0.1",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "cli-highlight": "^2.1.0",
    "clipboardy": "^2.0.0",
    "cliui": "^4.1.0",
    "dotenv": "^7.0.0",
    "dotenv-expand": "^5.1.0",
    "fs-extra": "^7.0.1",
    "hash-sum": "^1.0.2",
    "launch-editor-middleware": "^2.2.1",
    "lodash.defaultsdeep": "^4.6.0",
    "portfinder": "^1.0.20",
    "read-pkg": "^5.0.0",
    "string.prototype.padend": "^3.0.0",
    "thread-loader": "^2.1.2",
    "webpack": "^4.0.0",
    "webpack-chain": "^5.2.4",
    "webpack-bundle-analyzer": "^3.3.0",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1",
    "eslint": "^5.15.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stonehiy/megalo-cli.git",
    "directory": "packages/@megalo/cli-plugin-web"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "bigMeow <running@vip.163.com> (github.com/bigmeow)",
  "license": "MIT"
}
